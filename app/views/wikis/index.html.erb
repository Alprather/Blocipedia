<h1>Blocipedia Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">
        <h2 class="media-heading">
          <%= link_to wiki.title, wiki_path(wiki) %>
          <% if policy(wiki).destroy? %>
          <%= link_to "Delete Wiki", wiki, method: :delete, class: 'btn btn-link btn-xs', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
          <% end %>
        </h2>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>
